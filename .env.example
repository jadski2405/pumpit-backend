# Environment Variables for PumpIt Backend
# Copy this file to .env and fill in your values

# Database
# For AWS RDS: postgresql://pumpit:YOUR_PASSWORD@your-rds-endpoint.amazonaws.com:5432/pumpit
DATABASE_URL=postgresql://user:pass@host:5432/pumpit

# Solana Configuration
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
ESCROW_PRIVATE_KEY=your_base58_private_key
ESCROW_WALLET_ADDRESS=your_escrow_public_address
HOUSE_WALLET_ADDRESS=your_house_wallet_address

# Privy Authentication (get from https://dashboard.privy.io)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Server
PORT=3001
NODE_ENV=development
